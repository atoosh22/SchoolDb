                                    <div class="col-6">
                                        <h3> <i class="fa-solid fa-users "></i></h1>
                                    </div>
                                    <div class="col-6">
                                        3,210
                                    </div>
                                    <div class="col-12 mt-3">
                                        Total Students
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- card2 -->

                    <div class="col-sm-1 col-md-3 pt-2">
