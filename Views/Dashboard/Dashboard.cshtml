<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- bootstrap link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- font awasome link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .myside {
            background-color: #252159;
            color: white;

        }

        .btn {
            border: 0;
            outline: 0;
            font-size: 22px;
        }

        .btn:hover {
            outline: #252159;
        }

        /* end slide bar */

        .myheader {
            background-color: #58C6D3;
        }

        .nav {
            display: flex;
            justify-content: space-between;
            margin-left: 25px;
            margin-right: 40px;
            align-items: center;
            padding: 10px;

        }

        .nav a {
            color: #fff;
            font-size: 22px;
            text-decoration: none;
        }


        .myside .btn:hover {
            background-color: #58C6D3;
            color: white;
        }

        .card1 {
            background-color: #58C6D3;


        }

        .card2,
        .no {
            background-color: #252159;

        }

        .card2:hover {
            background-color: #58C6D3;
            opacity: 60%;
        }

        .card1:hover {
            background-color: #252159;
            color: white;
            opacity: 80%;
        }

        .link {
            color: white;
            text-decoration: none;
        }

        button {
            background-color: #58C6D3;
            border: 2px solid #fff;
            outline: none;
            color: #fff;
            padding: 8px;

        }
    </style>
</head>

<body>

    <div class="d-flex">
        <!-- side bar -->
        <div class="vh-100 myside" style="width: 12rem">
            <div>
                <img class="w-50 " src="img/logo2.png" alt="">
            </div>

            <div class="mt-3">
                <button class="btn text-white">
                    <i class=" hover fa-solid fa-table-columns text-white px-1"></i>
                    <a class="link" asp-area="" asp-controller="Dashboard" asp-action="Dashboard">Dashboard</a>
                </button>
                <!-- dashboard -->

                <button class="btn text-white">
                    <i class="fa-solid fa-graduation-cap px-1"></i>
                    <a class="link" asp-area="" asp-controller="Dashboard" asp-action="Student">Student</a>

                </button>
                <!-- students -->

                <button class="btn text-white">
                    <i class="fa-solid fa-person-chalkboard px-1"></i>
                    <a class="link" asp-area="" asp-controller="Dashboard" asp-action="Teacher">Teacher</a>

                </button>
                <!-- teacher -->

                <button class="btn text-white">
                    <i class="fa-solid fa-book-open-reader px-1"></i>
                    <a class="link" asp-area="" asp-controller="Dashboard" asp-action="Courses">Courses</a>
                </button>
                <!-- coursed -->
                <button class="btn text-white">
                    <i class="fa-solid fa-pen px-1"></i>
                    <a class="link" asp-area="" asp-controller="Dashboard" asp-action="Clases">Clases</a>

                </button>
                <!-- regestration -->

                <button class="btn text-white">
                    <i class="fa-solid fa-user px-1"></i>
                    <a href="users.html" class="link">Users</a>
                </button>
                <!-- users -->
                <button class="btn text-white">
                    <i class="fa-solid fa-right-from-bracket px-1"></i>
                    <a class="link" asp-area="" asp-controller="Dashboard" asp-action="Logout">Logout</a>

                </button>
                <!-- Logout -->
            </div>

        </div>
        <!-- End  side bar -->

        <!-- Header -->
        <div class=" w-100">
            <div class="myheader">

                <div class="nav">
                    <i class="fa-solid fa-bars text-white"></i>

                    <a href="login.html">Login</a>
                </div>
            </div>
            <!-- End Header -->

            <!-- contant section -->


            <div class="m-5">
