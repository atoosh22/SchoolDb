        }

        .login {
            background-color: red;
        }

        .head {
            background-color: #58C6D3;
            justify-content: space-between;
        }

        .nav {
            display: flex;
            justify-content: space-between;
            margin-left: 25px;
            margin-right: 40px;
            align-items: center;
            padding: 10px;

        }

        .nav a {
            color: #fff;
            font-size: 22px;
            text-decoration: none;
        }

        .myside .btn:hover {
            background-color: #58C6D3;
            color: red;
        }


        .link {
            color: white;
            text-decoration: none;
        }

        button {
            background-color: #58C6D3;
            border: 2px solid #fff;
            outline: none;
            color: #fff;
            padding: 8px;

