                </button>
                <!-- users -->
                <button class="btn text-white">
                    <i class="fa-solid fa-right-from-bracket px-1"></i>
                    <a class="link" asp-area="" asp-controller="Dashboard" asp-action="Logout">Logout</a>

                </button>
                <!-- Logout -->
            </div>

        </div>
        <!-- End  side bar -->

        <!-- Header -->
        <div class=" w-100">
            <div class="myheader">

                <div class="nav">
                    <a href="#">Students</a>


                    <button data-bs-toggle="modal" data-bs-target="#exampleModal">+ Add Student</button>

