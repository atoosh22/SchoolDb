            <!-- contant sections -->


            <!-- Button trigger modal -->

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel"> Add New student</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action="" class="form-group ">
                                <!-- Id -->
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1">#</span>
                                    <input type="text" class="form-control" placeholder="Enter Id" aria-label="Id"
                                        aria-describedby="basic-addon1">
                                </div>
                                <!-- Name -->
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1"></span>
                                    <input type="text" class="form-control" placeholder="Enter Student Name"
                                        aria-label="Name" aria-describedby="basic-addon1">
                                </div>
                                <!-- Tell -->
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1"><i
                                            class="fa-solid fa-mobile"></i></span>
                                    <input type="tel" class="form-control" placeholder="Enter Tell" aria-label="Tell"
                                        aria-describedby="basic-addon1">
                                </div>
                                <!-- Adress -->
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1"><i
                                            class="fa-solid fa-location-dot"></i></span>
                                    <input type="text" class="form-control" placeholder="Enter Adress"
                                        aria-label="Adress" aria-describedby="basic-addon1">
                                </div>
                                <!-- DOB -->
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1"><i
                                            class="fa-solid fa-calendar-days"></i></span>
                                    <input type="date" class="form-control" placeholder="Enter Date of Birth"
                                        aria-label="DOF" aria-describedby="basic-addon1">
                                </div>
                                <!-- POB -->
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1"><i
                                            class="fa-solid fa-calendar-days"></i></span>
                                    <input type="text" class="form-control" placeholder="Enter Place of Birth"
                                        aria-label="BOF" aria-describedby="basic-addon1">
                                </div>
                                <!-- Gurdian tell -->
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1"><i
                                            class="fa-solid fa-mobile"></i></span>
                                    <input type="text" class="form-control" placeholder="Enter GURDIAN-TELL"
                                        aria-label="Gurdian-tel" aria-describedby="basic-addon1">
                                </div>
                                <!-- fee -->
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1"><i
                                            class="fa-solid fa-money-check-dollar"></i></span>
                                    <input type="text" class="form-control" placeholder="Enter Fee" aria-label="Fee"
                                        aria-describedby="basic-addon1">
                                </div>
                                <!-- class Id -->
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1"><i
                                            class="fa-brands fa-discourse"></i></span>
                                    <input type="text" class="form-control" placeholder="Enter Class_Id"
                                        aria-label="Class_id" aria-describedby="basic-addon1">
                                </div>


                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="card2" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="button">Save changes</button>
                        </div>
                    </div>
