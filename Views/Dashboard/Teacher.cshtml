<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>

    <!-- bootstrap link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- font awasome link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />


    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .myside {
            background-color: #252159;
            color: white;

        }

        .btn {
            border: 0;
            outline: 0;
            font-size: 22px;
        }

        .btn:hover {
            outline: #252159;
        }

        /* end slide bar */

        .myheader {
            background-color: #58C6D3;
        }

        .login {
            background-color: red;
        }

        .head {
            background-color: #58C6D3;
            justify-content: space-between;
        }

        .nav {
            display: flex;
            justify-content: space-between;
            margin-left: 25px;
            margin-right: 40px;
            align-items: center;
            padding: 10px;

        }

        .nav a {
            color: #fff;
            font-size: 22px;
            text-decoration: none;
        }

        .myside .btn:hover {
            background-color: #58C6D3;
            color: red;
        }


        .link {
            color: white;
            text-decoration: none;
        }

        button {
            background-color: #58C6D3;
            border: 2px solid #fff;
            outline: none;
            color: #fff;
            padding: 8px;

        }
    </style>
</head>

<body>

    <div class="d-flex">
        <!-- side bar -->
        <div class="vh-100 myside" style="width: 12rem">
            <div>
                <img class="w-50 " src="img/logo2.png" alt="">
            </div>

            <div class="mt-3">
                <button class="btn text-white">
                    <i class=" hover fa-solid fa-table-columns text-white px-1"></i>
                    <a class="link" asp-area="" asp-controller="Dashboard" asp-action="Dashboard">Dashboard</a>

                </button>
                <!-- dashboard -->

                <button class="btn text-white">
                    <i class="fa-solid fa-graduation-cap px-1"></i>
                    <a class="link" asp-area="" asp-controller="Dashboard" asp-action="Student">Student</a>

                </button>
                <!-- students -->

                <button class="btn text-white">
                    <i class="fa-solid fa-person-chalkboard px-1"></i>

                    <a class="link" asp-area="" asp-controller="Dashboard" asp-action="Teacher">Teacher</a>

                </button>
                <!-- teachers -->

                <button class="btn text-white">
                    <i class="fa-solid fa-book-open-reader px-1"></i>
                    <a class="link" asp-area="" asp-controller="Dashboard" asp-action="Courses">Courses</a>
                </button>
                <!-- coursed -->
                <button class="btn text-white">
                    <i class="fa-solid fa-pen px-1"></i>
                    <a class="link" asp-area="" asp-controller="Dashboard" asp-action="Clases">Clases</a>

                </button>
                <!-- regestration -->

                <button class="btn text-white">
                    <i class="fa-solid fa-user px-1"></i>
                    <a href="users.html" class="link"> Users</a>
                </button>
                <!-- users -->
                <button class="btn text-white">
                    <i class="fa-solid fa-right-from-bracket px-1"></i>
                    <a class="link" asp-area="" asp-controller="Dashboard" asp-action="Logout">Logout</a>

                </button>
                <!-- Logout -->
            </div>

        </div>
        <!-- End  side bar -->

        <!-- Header -->
        <div class=" w-100">
            <div class="myheader">
                <div class=" head">
                    <div class="nav">
                        <a href="teachers.html">Teachers</a>


                        <button data-bs-toggle="modal" data-bs-target="#exampleModal">+ Add Teacher</button>



                    </div>


                </div>
                <!-- End Header -->

                <!-- contant section -->

                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel"> Add New Teacher</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="" class="form-group ">
                                    <!-- Id -->
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1">#</span>
                                        <input type="text" class="form-control" placeholder="Enter Id" aria-label="Id"
                                            aria-describedby="basic-addon1">
                                    </div>
                                    <!-- Name -->
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1"></span>
                                        <input type="text" class="form-control" placeholder="Enter Teacher Name"
                                            aria-label="Name" aria-describedby="basic-addon1">
                                    </div>
                                    <!-- Tell -->
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1"><i
                                                class="fa-solid fa-mobile"></i></span>
                                        <input type="tel" class="form-control" placeholder="Enter Tell"
                                            aria-label="Tell" aria-describedby="basic-addon1">
                                    </div>
                                    <!-- Adress -->
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1"><i
                                                class="fa-solid fa-location-dot"></i></span>
                                        <input type="text" class="form-control" placeholder="Enter Adress"
                                            aria-label="Adress" aria-describedby="basic-addon1">
                                    </div>
                                    <!-- Email -->
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1"><i
                                                class="fa-solid fa-envelope"></i></span>
                                        <input type="email" class="form-control" placeholder="Enter Email"
                                            aria-label="Email" aria-describedby="basic-addon1">
                                    </div>


                                    <!-- Degree-id -->
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1"><i
                                                class="fa-solid fa-map-location"></i></span>
                                        <input type="Tel" class="form-control" placeholder="Enter Degree_Id"
                                            aria-label="Fee" aria-describedby="basic-addon1">
                                    </div>
                                    <!-- Title_Id -->
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1"><i
                                                class="fa-solid fa-turn-down"></i></span>
                                        <input type="tel" class="form-control" placeholder="Enter Title_Id"
                                            aria-label="Class_id" aria-describedby="basic-addon1">
                                    </div>


                                </form>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="card2" data-bs-dismiss="modal">Close</button>
                                <button type="button" class="button">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>





            </div>

            <div class="m-5">
                <table class="table table-Striped">
                    <thead>
                        <tr>
                            <th>#ID</th>
                            <th>Name</th>
                            <th>TELL</th>
                            <th>ADDRESS</th>
                            <th>Email</th>
                            <th>Degree_Id</th>
                            <th>Title_Id</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>2010</td>
                            <td>Daacad Ahmed Daud</td>
                            <td>614944045</td>
                            <td>Baar-ubah</td>

                            <td>Daacad@gmail.com</td>
                            <td>4040</td>

                            <td>2040</td>
                        </tr>
                    </tbody>
                </table>



            </div>

            <!-- end contants -->



        </div>

        <!-- javascript link -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>